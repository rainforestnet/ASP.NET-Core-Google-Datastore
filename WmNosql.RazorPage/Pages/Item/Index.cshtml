@page
@model WmNosql.RazorPage.Pages.Item.IndexModel
@{
    ViewData["Title"] = "Index";
}
<blockquote>Item List</blockquote>
<a class="btn btn-warning btn-sm" asp-page="./Create">Create</a>
<hr />
<form method="post">
    <table class="table">
        <thead>
            <tr>
                <th>ID</th>
                <th>Code</th>
                <th>Desctiption</th>
                <th>Brand</th>
                <th>Model</th>
                <th>Base UOM</th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model.Items)
            {
            <tr>
                <td>@item.Id</td>
                <td>@item.Code</td>
                <td>@item.Description</td>
                <td>@item.Brand</td>
                <td>@item.Model</td>
                <td>@item.BaseUOM</td>
                <td>
                    <a asp-page="./Edit" asp-route-id="@item.Id" class="btn btn-info btn-sm" role="button">Edit</a>
                    <button type="submit" 
                            class="btn btn-danger btn-sm"
                            asp-page-handler="Delete"
                            asp-route-id="@item.Id">Delete
                    </button>
                </td>
            </tr>
            }
        </tbody>
    </table>
    
</form>
